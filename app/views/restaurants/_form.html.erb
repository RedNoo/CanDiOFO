<div class="col-lg-6 col-md-6 col-xs-6">
  <div class="row">
    <div class="col-xs-12">
<%= render "shared/errors", obj: @user %>

<%= form_for(@restaurant, :html => {class: "form-horizontal", role: "form"}) do |f| %>
<div class="form-group">
  <div class="col-xs-2">
      <div class="control-label">
          <%= f.label :name %>
      </div>
  </div>
  <div class="col-xs-10">
    <%= f.text_field :name, class: "form-control", placeholder: "name", autofocus: true %>
  </div>
</div>
  <div class="form-group">
    <div class="col-xs-2">
        <div class="control-label">
            <%= f.label :address %>
        </div>
    </div>
    <div class="col-xs-10">
      <%= f.text_field :address, class: "form-control", placeholder: "address", autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-xs-2">
        <div class="control-label">
            <%= f.label :post_code %>
        </div>
    </div>
    <div class="col-xs-10">
      <%= f.text_field :post_code, class: "form-control", placeholder: "post code", autofocus: true %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit (@user.new_record? ? "Sign Up" : "Update User"), class: "btn btn-default"%>
    </div>
  </div>

<% end %>

</div>
</div>
</div>
