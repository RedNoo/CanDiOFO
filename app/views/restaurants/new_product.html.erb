<div class="col-lg-6 col-md-6 col-xs-6">
  <div class="row">
    <div class="col-xs-12">
      <%= render "shared/errors", obj: @product %>

      <%= form_for(@product, url: {action: "add_product"}, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
      <%= f.hidden_field :category_id, :value => @category.id %>
      <div class="form-group">
        <div class="col-xs-2">
          <div class="control-label">
            <%= f.label :title %>
          </div>
        </div>
        <div class="col-xs-10">
          <%= f.text_field :title, class: "form-control", placeholder: "title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-2">
          <div class="control-label">
            <%= f.label :description %>
          </div>
        </div>
        <div class="col-xs-10">
          <%= f.text_field :description, class: "form-control", placeholder: "description", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2">
          <div class="control-label">
            <%= f.label :line_no %>
          </div>
        </div>
        <div class="col-xs-10">
          <%= f.text_field :line_no, class: "form-control", placeholder: "line_no", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2">
          <div class="control-label">
            <%= f.label :price %>
          </div>
        </div>
        <div class="col-xs-10">
          <%= f.text_field :price, class: "form-control", placeholder: "price", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit (@product.new_record? ? "Add" : "Update"), class: "btn btn-primary"%>
          <%=link_to "return to product list", category_product_list_path(@category)%>

        </div>
      </div>

      <% end %>

    </div>
  </div>
</div>
