<div class="col-lg-6 col-md-6 col-xs-6">
  <div class="row">
    <div class="col-xs-12">
      <%= render "shared/errors", obj: @restaurant %>

      <%= form_for(@restaurant_area, url: {action: "add_restaurant_area"}, :html => {class: "form-horizontal", role: "form"}) do |f| %>

      <%= f.hidden_field :restaurant_id, :value => @restaurant.id %>
      <div class="form-group">
        <div class="col-xs-2">
          <div class="control-label">
            <%= f.label :post_code %>
          </div>
        </div>
        <div class="col-xs-10">
          <%= f.text_field :post_code, class: "form-control", placeholder: "post code", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-xs-2">
          <div class="control-label">
            <%= f.label :delivery_fee %>
          </div>
        </div>
        <div class="col-xs-10">
          <%= f.text_field :delivery_fee, class: "form-control", placeholder: "delivery fee" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2">
          <div class="control-label">
            <%= f.label :delivery_fee_text %>
          </div>
        </div>
        <div class="col-xs-10">
          <%= f.text_field :delivery_fee_text, class: "form-control", placeholder: "line_no"%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit (@restaurant_area.new_record? ? "Add" : "Update"), class: "btn btn-primary"%>
          <%=link_to "return to area list", restaurant_areas_by_restaurant_path(@restaurant)%>
        </div>
      </div>

      <% end %>

    </div>
  </div>
</div>
